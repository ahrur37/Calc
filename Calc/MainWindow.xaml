<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc"
        mc:Ignorable="d"
        Title="Calc" Icon="image/Icon.png" Height="377" Width="360">
    
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="txtInput" 
                 Grid.Row="1" 
                 Grid.ColumnSpan="4"
                 Text="{Binding Rez}"/>

        <Button x:Name="btnRoot"
                Grid.Row="2"
                Content="√"
                Background="LightGray"
                Click="btnRoot_Click"/>
        <Button x:Name="btnSquare"
                Grid.Row="2"
                Grid.Column="1"
                Content="x²"
                Background="LightGray"
                Click="btnSquare_Click"/>
        <Button x:Name="btnClearEntry"
                Grid.Row="2"
                Grid.Column="2"
                Content="←"
                Background="Orange"
                Click="btnClearEntry_Click"/>
        <Button x:Name="btnClearAll"
                Grid.Row="2"
                Grid.Column="3"
                Content="C"
                Background="Maroon"
                Click="btnClearAll_Click"/>

        <Button x:Name="btn7"
                Grid.Row="3"
                Content="7"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn8"
                Grid.Row="3"
                Grid.Column="1"
                Content="8"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn9"
                 Grid.Row="3"
                Grid.Column="2"
                Content="9"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btnDivision" Grid.Row="3"
                Grid.Column="3"
                Content="/"
                Background="LightGray"
                Click="operationButton_Click"/>

        <Button x:Name="btn4"
                Grid.Row="4"
                Content="4"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn5"
                Grid.Row="4"
                Grid.Column="1"
                Content="5"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn6"
                Grid.Row="4"
                Grid.Column="2"
                Content="6"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btnMultiplication"
                Grid.Row="4"
                Grid.Column="3"
                Content="*"
                Background="LightGray"
                Click="operationButton_Click"/>

        <Button x:Name="btn1"
                Grid.Row="5"
                Content="1"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn2"
                Grid.Row="5"
                Grid.Column="1"
                Content="2"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btn3"
                Grid.Row="5"
                Grid.Column="2"
                Content="3"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btnSum"
                Grid.Row="5"
                Grid.Column="3"
                Content="+"
                Background="LightGray"
                Click="operationButton_Click"/>

        <Button x:Name="btn0"
                Grid.Row="6"
                Content="0"
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btnPoint" Grid.Row="6"
                Grid.Column="1"
                Content=","
                Background="LightGray"
                Click="regularButtonClick"/>
        <Button x:Name="btnSubtraction"
                Grid.Row="6"
                Grid.Column="2"
                Content="-"
                Background="LightGray"
                Click="operationButton_Click"/>
        <Button x:Name="btnEquals"
                Grid.Row="6"
                Grid.Column="3"
                Content="="
                Background="Lime"
                Click="btnEquals_Click"/>
    </Grid>
</Window>
